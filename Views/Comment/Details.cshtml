@model leodacosta02.Models.CommentModel.CommentModel

<h2>Detalhes do comentário</h2>

<div>
    <p><strong>Usuário:</strong> @Model.User</p>
    <p><strong>Texto:</strong> @Model.Text</p>
    <p><strong>Postado em:</strong> @Model.CreatedAt</p>
</div>

<h3>Respostas</h3>

@if (Model.Replies != null && Model.Replies.Any())
{
    <ul>
        @foreach (var reply in Model.Replies)
        {
            <li>
                <p><strong>@reply.User:</strong> @reply.Text</p>
                <p><strong>Postado em:</strong> @reply.CreatedAt</p>
            </li>
        }
    </ul>
}
else
{
    <p>Sem respostas ainda</p>
}

<a href="@Url.Action("Index", "Comment")" class="btn btn-secondary">Voltar para os comentários</a>