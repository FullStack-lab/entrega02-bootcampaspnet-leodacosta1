@model leodacosta02.Models.CommentModel.CommentModel

<h2>Delete Comment</h2>
<p>Are you sure you want to delete this comment?</p>

<div>
    <p><strong>User:</strong> @Model.User</p>
    <p><strong>Text:</strong> @Model.Text</p>
    <p><strong>Posted At:</strong> @Model.CreatedAt</p>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Comment", FormMethod.Post))
{
    @Html.HiddenFor(model => model.CommentId)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Comment")" class="btn btn-secondary">Cancel</a>
}