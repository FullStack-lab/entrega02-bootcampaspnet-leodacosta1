@model leodacosta02.Models.CommentModel.CommentModel

<h2>Excluir comentário</h2>
<p>Tem certeza que deseja excluir esse comentário?</p>

<div>
    <p><strong>Usuário:</strong> @Model.User</p>
    <p><strong>Texto:</strong> @Model.Text</p>
    <p><strong>Postado em:</strong> @Model.CreatedAt</p>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Comment", FormMethod.Post))
{
    @Html.HiddenFor(model => model.CommentId)
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a href="@Url.Action("Index", "Comment")" class="btn btn-secondary">Cancelar</a>
}